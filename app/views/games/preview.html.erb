<div class="table">
</div>

    <h1><%= @game.name %> game preview </h1>
    <h2><%= @game.number_of_players %> players</h2>

<% if @game.board %>
  <div class="movablecontainer" data-posx="<%= @game.board.posX %>" data-posy="<%= @game.board.posY %>" >
    <%=cl_image_tag @game.board.photo.key , { class: "movable board", style: " left: #{@game.board.posX}; top: #{@game.board.posY};"} %>
    <%= simple_form_for [@game, @game.board] do |f| %>
      <%= f.input :posX, input_html: { id: "posX" }, as: :hidden %>
      <%= f.input :posY, input_html: { id: "posY" }, as: :hidden %>
    <% end %>
  </div>
<% end %>

<% unless @game.pieces.empty? %>
  <% @game.pieces.each do |piece| %>
  <div class="movablecontainer" data-posx="<%= piece.posX %>" data-posy="<%= piece.posY %>" >
    <%= cl_image_tag piece.photo.key, { class: "movable piece", style: "left: #{piece.posX}; top: #{piece.posY};", width: '60px'}%>
    <%= simple_form_for [@game, piece] do |f| %>
    <%= f.input :posX, input_html: { id: "posX" }, as: :hidden %>
    <%= f.input :posY, input_html: { id: "posY" }, as: :hidden %>
    <% end %>
  </div>
  <% end %>
<% end %>

<% unless @game.tokens.empty? %>
  <% @game.tokens.each do |token| %>
  <div class="movablecontainer" data-posx="<%= token.posX %>" data-posy="<%= token.posY %>" >
    <%= cl_image_tag token.photo.key, { class: "movable token", style: "left: #{token.posX}; top: #{token.posY};", width: '40px'}%>
    <%= simple_form_for [@game, token] do |f| %>
    <%= f.input :posX, input_html: { id: "posX" }, as: :hidden %>
    <%= f.input :posY, input_html: { id: "posY" }, as: :hidden %>
    <% end %>
  </div>
  <% end %>
<% end %>

      <%# unless @game.dices.empty? %>
        <%#= cl_image_tag("dices.png", :quality=>50, :width=>72, :crop=>"scale") %>
        <%# <ul> %>
          <%# @game.dices.each do |dice| %>
          <%# <li><%#= dice.faces %>   <%#faces</li> %>
          <%# end %>
        <%#</ul>
      <%# end %>

<% unless @game.card_decks.empty? %>
  <% @game.card_decks.each do |deck| %>
    <div class="movablecontainer">
      <% deck.cards.each do |card| %>
        <%= cl_image_tag card.photo.key, { class: "card", style: "position: absolute; left: #{deck.posX}px; top: #{deck.posY + card.position * 40}px;", width: '120px'} %>
      <% end %>
    </div>
  <% end %>
<% end %>

<div class = "bottom-right btn btn-primary">
  <%= link_to "Save Game", games_path %>
</div>
