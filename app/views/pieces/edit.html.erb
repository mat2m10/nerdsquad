<div class = "container">
  <h2>Update your PIECE</h2>
  <%= simple_form_for([@game, @piece]) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
    <%= f.button :submit, class:'btn-flat'  %>
  <% end %>
</div>